{% extends 'base.html.twig' %}

{% block title %}R Laboratory: Blog{% endblock %}

{% block body %}
<div class="blog-container 
">
    
    <div id="blog-title-container">
        <h1 id="blog-title">Blog</h1>
      
        <div class="categories-list">
        {% for category in categories %}
            <a href="{{ path('blog_category_show', {'slug': category.slug }) }}">
                <li>{{category.name}}</li>
            </a>
       {% endfor %}
        </div>
    </div>
    <div class="article-list-container">  
        <div id="box-articles">
        {% for blog in blogs %}
        {% if blog == blogs|first %}
        <h2>Last Article</h2>
        <div id="first-article">
            <img src='uploads/{{blog.image.filename}}'>
            <div>
            <h3>{{blog.title}}</h3>
            {% for category in blog.categories %}
            <span style="color:{{category.color}}">{{category.name}} </span>
            {% endfor %}
            <p>{{blog.content|striptags}}</p>
            <p>{{blog.createdAt|date()}}</p>
            </div>
        </div>
        <div class="grid-container">
        {% else %}
        
     
            <div class='article-container'>
                <a href="{{ path('blog_article_show', {'slug': blog.slug }) }}">
                <img src='uploads/{{blog.image.filename}}'>
                <h3>{{blog.title}}</h3>
                {% for category in blog.categories %}
                <span style="color:{{category.color}}">{{category.name}} </span>
            {% endfor %}
                <p>{{blog.content|striptags}}</p>
                <p>{{blog.createdAt|date()}}</p>
                </a>
            </div>
       {% endif %}
        {% endfor %}
  
        </div>
    </div>
    <div>
    
       
     
    
</div>
{% endblock %}
